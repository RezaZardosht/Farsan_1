<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/linearM"
                  android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:id="@+id/RelativeValue"
            android:layout_gravity="top|right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Value"
                android:id="@+id/ETxt_View17"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0-60"
                android:id="@+id/ETxt_getTimePeriod"
                android:layout_gravity="right"
                android:layout_below="@+id/ETxt_View17"
                android:layout_toLeftOf="@+id/ETxt_View17"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0-60"
                android:id="@+id/ETxt_getTimeSave"
                android:layout_gravity="right"
                android:layout_below="@+id/ETxt_getTimePeriod"
                android:layout_toLeftOf="@+id/ETxt_View17"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sig1"
                android:id="@+id/ETxt_NameSigProf_1"
                android:layout_below="@+id/ETxt_getTimeSave"
                android:layout_toLeftOf="@+id/ETxt_View17"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0-10000"
                android:id="@+id/ETxt_MaxFellow"
                android:layout_below="@+id/ETxt_NameSigProf_4"
                android:layout_toLeftOf="@+id/ETxt_View17"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0-10000"
                android:id="@+id/ETxt_MaxVollume"
                android:layout_below="@+id/ETxt_MaxFellow"
                android:layout_toLeftOf="@+id/ETxt_View17"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0-10000"
                android:id="@+id/ETxt_MaxPeriod"
                android:layout_below="@+id/ETxt_MaxVollume"
                android:layout_toLeftOf="@+id/ETxt_View17"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0-3"
                android:id="@+id/ETxt_Taarefe"
                android:layout_gravity="right"
                android:layout_below="@+id/ETxt_MaxPeriod"
                android:layout_toLeftOf="@+id/ETxt_View17"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sig2"
                android:id="@+id/ETxt_NameSigProf_2"
                android:layout_below="@+id/ETxt_NameSigProf_1"
                android:layout_toLeftOf="@+id/ETxt_View17"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sig3"
                android:id="@+id/ETxt_NameSigProf_3"
                android:layout_below="@+id/ETxt_NameSigProf_2"
                android:layout_toLeftOf="@+id/ETxt_View17"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sig4"
                android:id="@+id/ETxt_NameSigProf_4"
                android:layout_below="@+id/ETxt_NameSigProf_3"
                android:layout_toLeftOf="@+id/ETxt_View17"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="دوره زمانی قرائت دوره ای"
                android:id="@+id/textView6"
                android:layout_gravity="right"
                android:layout_above="@+id/ETxt_getTimeSave"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="دوره زمانی ذخیره پروفایل مصرف"
                android:id="@+id/textView7"
                android:layout_gravity="right"
                android:layout_alignBottom="@+id/ETxt_getTimeSave"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سیگنال"
                android:id="@+id/textView8"
                android:layout_alignBottom="@+id/ETxt_NameSigProf_1"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سیگنال"
                android:id="@+id/textView9"
                android:layout_above="@+id/ETxt_NameSigProf_3"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سیگنال"
                android:id="@+id/textView10"
                android:layout_alignBottom="@+id/ETxt_NameSigProf_3"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سیگنال"
                android:id="@+id/textView11"
                android:layout_above="@+id/ETxt_MaxFellow"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حداکثر دبی "
                android:id="@+id/textView12"
                android:layout_alignBottom="@+id/ETxt_MaxFellow"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حداکثر حجم مصرف "
                android:id="@+id/textView13"
                android:layout_above="@+id/ETxt_MaxPeriod"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حداکثر حجم دوره "
                android:id="@+id/textView14"
                android:layout_alignBottom="@+id/ETxt_MaxPeriod"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تعرفه"
                android:id="@+id/textView15"
                android:layout_gravity="right"
                android:layout_alignBottom="@+id/ETxt_Taarefe"
                android:layout_alignParentRight="true"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="          ذخیره       "
                android:id="@+id/Btn_Save"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/ETxt_View17"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>